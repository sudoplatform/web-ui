{
  "name": "@sudoplatform/web-ui",
  "author": "Chris Hardy <chardy@anonyome.com>",
  "version": "0.0.0",
  "description": "Sudo Platform UI component library for web",
  "repository": "git@gitlab.tools.anonyome.com:platform/web-ui.git",
  "license": "MIT",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "start": "start-storybook -p 9001 -c .storybook",
    "build": "yarn build:js && yarn build:ts",
    "build:js": "babel src --out-dir lib --extensions '.ts,.tsx' --ignore '**/*.spec.ts,**/*.spec.tsx,**/*.stories.tsx'",
    "build:ts": "tsc --project tsconfig.declarations.json",
    "lint": "eslint . && prettier --list-different .",
    "test": "jest",
    "typecheck": "yarn tsc --noEmit",
    "verify": "yarn audit && yarn lint && yarn typecheck && yarn test --coverage"
  },
  "resolutions": {
    "@storybook/cli/**/ini": "^1.3.6",
    "@storybook/react/**/ini": "^1.3.6"
  },
  "peerDependencies": {
    "react": "^16.0",
    "react-dom": "^16.0",
    "styled-components": "^5.2.1"
  },
  "dependencies": {
    "antd": "^4.9.1",
    "classnames": "^2.2.6",
    "color": "^3.1.3"
  },
  "devDependencies": {
    "@anonyome/dependency-report": "^1.31.0",
    "@babel/cli": "^7.12.8",
    "@babel/core": "^7.12.9",
    "@storybook/cli": "^6.1.10",
    "@storybook/react": "^6.1.10",
    "@types/classnames": "^2.2.11",
    "@types/color": "^3.0.1",
    "@types/enzyme": "^3.10.8",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^26.0.15",
    "@types/styled-components": "^5.1.4",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "enzyme-to-json": "^3.6.1",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "import-sort-style-module": "^6.0.0",
    "jest": "^26.6.3",
    "jest-styled-components": "^7.0.3",
    "prettier": "^2.2.0",
    "prettier-plugin-import-sort": "^0.0.6",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "styled-components": "^5.2.1",
    "typescript": "^4.1.2"
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "module",
      "parser": "typescript"
    }
  }
}
