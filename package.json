{
  "name": "@sudoplatform/web-ui",
  "author": "Anonyome Labs, Inc.",
  "version": "0.0.0",
  "description": "Sudo Platform UI component library for web",
  "repository": {
    "type": "git",
    "url": "https://github.com/sudoplatform/web-ui.git"
  },
  "license": "Apache-2.0",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "storybook": "start-storybook -p 9001 -c .storybook",
    "build": "yarn build:js && yarn build:ts",
    "build:js": "babel src --out-dir lib --extensions '.ts,.tsx' --ignore '**/*.spec.ts,**/*.spec.tsx,**/*.stories.tsx'",
    "build:ts": "tsc --project tsconfig.declarations.json",
    "lint": "eslint . && prettier --list-different .",
    "test": "jest",
    "typecheck": "yarn tsc --noEmit",
    "verify": "yarn audit && yarn lint && yarn typecheck && yarn test --coverage"
  },
  "resolutions": {
    "@storybook/cli/**/ws": ">=6.2.2",
    "@storybook/cli/**/set-value": ">=4.0.1",
    "@storybook/cli/**/trim": ">=0.0.3",
    "@storybook/react/**/@pmmmwh/react-refresh-webpack-plugin": "^0.5.1",
    "@storybook/react/**/browserslist": ">=4.16.5",
    "@storybook/react/**/glob-parent": ">=5.1.2",
    "@storybook/react/**/immer": "^9.0.6",
    "@storybook/react/**/set-value": ">=4.0.1"
  },
  "peerDependencies": {
    "antd": "^4.12.3",
    "react": "^16.0",
    "react-dom": "^16.0",
    "styled-components": "^5.2.1"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "color": "^3.1.3",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.8",
    "@babel/core": "^7.12.9",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/cli": "^6.3.12",
    "@storybook/react": "^6.3.12",
    "@types/color": "^3.0.1",
    "@types/enzyme": "^3.10.8",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^26.0.15",
    "@types/react-dom": "^17.0.4",
    "@types/styled-components": "^5.1.4",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "antd": "^4.12.3",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "enzyme-to-json": "^3.6.1",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "import-sort-style-module": "^6.0.0",
    "jest": "^27.3.1",
    "jest-styled-components": "^7.0.3",
    "postcss": "8.2.10",
    "prettier": "^2.2.0",
    "prettier-plugin-import-sort": "^0.0.6",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "styled-components": "^5.2.1",
    "typescript": "^4.1.2"
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "module",
      "parser": "typescript"
    }
  }
}
